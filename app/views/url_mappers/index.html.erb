<p id="notice"><%= notice %></p>

<h1>Url Mappers</h1>

<table>
  <thead>
    <tr>
      <th>Longurl</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @url_mappers.each do |url_mapper| %>
      <tr>
        <td><%= url_mapper.longurl %></td>
        <td><%= link_to 'Show', url_mapper %></td>
        <td><%= link_to 'Edit', edit_url_mapper_path(url_mapper) %></td>
        <td><%= link_to 'Destroy', url_mapper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

